<Window x:Class="InventoryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManager"
        mc:Ignorable="d"
        Title="Sistema de Gestión de Inventario" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Gradientes -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2C3E50" Offset="0"/>
            <GradientStop Color="#34495E" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ECF0F1" Offset="0"/>
            <GradientStop Color="#D5DBDB" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para botones de módulos -->
        <Style x:Key="ModuleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#abd7f5"/>
                                <Setter Property="BorderBrush" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para iconos de módulos -->
        <Style x:Key="ModuleIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Estilo para títulos de módulos -->
        <Style x:Key="ModuleTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para cards de estadísticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="📦" FontSize="28" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Sistema de Gestión de Inventario" 
                                  FontSize="20" FontWeight="Bold" 
                                  Foreground="White"/>
                        <TextBlock Text="Panel de Control Principal" 
                                  FontSize="12" 
                                  Foreground="#BDC3C7"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="Usuario: Admin" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="0,0,20,0"/>
                    <Button Content="Cerrar Sesión" 
                           Background="#E74C3C" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="15,8" 
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Estadísticas Rápidas -->
                <TextBlock Text="Resumen General" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,15"/>

                <UniformGrid Columns="4" Margin="0,0,0,30">
                    <Border Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Total Productos" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="1,234" FontSize="24" FontWeight="Bold" 
                                      Foreground="#3498DB" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Stock Bajo" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="23" FontSize="24" FontWeight="Bold" 
                                      Foreground="#E74C3C" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Valor Total" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="$125,430" FontSize="24" FontWeight="Bold" 
                                      Foreground="#27AE60" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📈" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Movimientos Hoy" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="47" FontSize="24" FontWeight="Bold" 
                                      Foreground="#F39C12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Módulos del Sistema -->
                <TextBlock Text="Módulos del Sistema" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,15"/>

                <UniformGrid Columns="4">
                    <!-- Gestión de Productos -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenProductsModule">
                        <StackPanel>
                            <TextBlock Text="📦" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Gestión de Productos" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Administrar catálogo" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Control de Inventario -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenInventoryModule">
                        <StackPanel>
                            <TextBlock Text="📋" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Control de Inventario" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Stock y existencias" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Entradas y Salidas -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenMovementsModule">
                        <StackPanel>
                            <TextBlock Text="🔄" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Entradas y Salidas" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Movimientos de stock" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Proveedores -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenSuppliersModule">
                        <StackPanel>
                            <TextBlock Text="🏢" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Proveedores" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Gestión de proveedores" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Órdenes de Compra -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenPurchaseOrdersModule">
                        <StackPanel>
                            <TextBlock Text="🛒" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Órdenes de Compra" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Gestión de compras" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Categorías -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenCategoriesModule">
                        <StackPanel>
                            <TextBlock Text="🏷️" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Categorías" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Organización de productos" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Reportes -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenReportsModule">
                        <StackPanel>
                            <TextBlock Text="📊" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Reportes" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Análisis y estadísticas" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Configuración -->
                    <Button Style="{StaticResource ModuleButtonStyle}" 
                           Click="OpenSettingsModule">
                        <StackPanel>
                            <TextBlock Text="⚙️" Style="{StaticResource ModuleIconStyle}"/>
                            <TextBlock Text="Configuración" Style="{StaticResource ModuleTitleStyle}"/>
                            <TextBlock Text="Ajustes del sistema" FontSize="10" 
                                      Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Actividad Reciente -->
                <TextBlock Text="Actividad Reciente" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,30,0,15"/>

                <Border Style="{StaticResource StatCardStyle}" Margin="10,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="📈 Entrada de mercancía - Producto XYZ" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Hace 2 horas" 
                                      Foreground="#7F8C8D" FontSize="12"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="⚠️ Alerta de stock bajo - Producto ABC" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Hace 4 horas" 
                                      Foreground="#7F8C8D" FontSize="12"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🛒 Nueva orden de compra creada" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Ayer" 
                                      Foreground="#7F8C8D" FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>